{
	"extends": "af-tsconfig",
	"compilerOptions": {
		"target": "es2017",
		"module": "es2020",
		"emitDeclarationOnly": true,
		"declaration": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@src": ["./src"],
			"@src/*": ["./src/*"],
			"@lib": ["./lib"],
			"@lib/*": ["./lib/*"]
		}
	},
	"include": ["src", "lib"]
}
